<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="@dimen/space_12"
    tools:context=".ui.doctor.AttendanceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_attendance_generate_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_new_course"
        android:padding="@dimen/space_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/code_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16"
            android:background="@drawable/background_text_code_attendance"
            android:padding="@dimen/space_16"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_16"
            app:layout_constraintBottom_toTopOf="@id/btn_generate_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Edfdd4253563232" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16"
            android:backgroundTint="@color/background_primary"
            android:text="@string/generate_code"
            android:textColor="@color/light"
            android:textSize="@dimen/text_24"
            app:cornerRadius="@dimen/space_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/code_attendance" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:backgroundTint="@color/primary"
        android:enabled="false"
        android:text="@string/confirm"
        android:textColor="@color/light"
        android:textSize="@dimen/text_24"
        app:cornerRadius="@dimen/space_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_attendance_generate_code" />
</androidx.constraintlayout.widget.ConstraintLayout>